{# templates/author/list.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <title>Author List</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>List of Authors</h1>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>id</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td>{{ author.username }}</td> {# Replace 'username' with the actual property name in your Author entity #}
                    <td>{{ author.email }}</td>
                    <td>{{ author.id}}</td>
                    <td>
                      <button>Edit</button>
                      <button><a href="{{path('app_delete',{'id':author.id})}}"> delete</a></button>

                    </td> 
                      {# Replace 'email' with the actual property name in your Author entity #}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
